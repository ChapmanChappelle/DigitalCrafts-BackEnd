<html>
<head>
        <title>WORKOUT APP | Dashboard</title>
        <link rel="stylesheet" href="/css/styles.css"/>
</head>

    <body>
        <header>
    
        </header>


        <div class="container">
            <div class="topContainer">
                <h1> Welcome User </h1>
                <button> Go to Routines </button>

            </div>

            <div class="lowerContainer">
                <h1>Workout history</h1>
            
                {{#allRoutines}} 
                    <div class="workoutItem">
                        <form method= "POST" action="/dashboard/workout"> 
                            <div class="workoutImage">
                                <label class="displayTitle">{{title}}</label>
                            </div>
                            <div class="routineInfo">
                                <label><b>{{title}}</b></label> 
                                <label>Includes: {{exercises}}</label>
                                <input type="hidden" value={{workout_id}} name="workout_id"/>
                                <button>Start Workout</button>
                            </div>
                        </form>
                    </div>

                {{/allRoutines}}


            </div>



        </div>

    </body>
</html>